<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<style>
    table,th,tr{
        border: 1px solid black;
        border-collapse: collapse;
        
    }
    table{
        margin-top: 50px;
    }
    a.btn_edit{
    background: #372ccb;
    color: white;
    width: 60px;
    height: 35px;
    border-radius: 10px;
    outline: none;
    border: none;
    cursor: pointer;
}
a.btn_delete:hover,a.btn_edit:hover {
    color: #ffee00;
}

a.btn_delete{
    background: #9f2323;
    color: white;
    width: 60px;
    height: 35px;
    border-radius: 10px;
    outline: none;
    border: none;
    cursor: pointer;
}

</style>
<body>


    <div class="container">
        <table class="table table-bordered">
            <tr>
                <td>Email</td>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Address</td>
                <td>Action</td>
            </tr>
            <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td><%= dataTable[i].address %></td> 
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn_edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn_delete" type="button">Delete</a>
                </td>

            </tr>
            <% } %>
            
        </table>
      </div>
</body>
</html>